<?xml version="1.0" encoding="UTF-8"?>

<?import com.ysrbdlgn.audioconverter.frontend.ui.FileTable?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="root" prefHeight="600.0" prefWidth="900.0" stylesheets="@../css/mainapp.css"
            xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.ysrbdlgn.audioconverter.frontend.ui.controller.MainSceneController">

    <top>
        <VBox BorderPane.alignment="TOP_LEFT">
            <fx:include fx:id="ribbonMenu" source="ribbon.fxml"/>
        </VBox>
    </top>
    <center>
        <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="10.0"
              BorderPane.alignment="CENTER">
            <GridPane fx:id="outputConfigPane" maxHeight="60.0" maxWidth="1.7976931348623157E308" minHeight="60.0"
                      prefHeight="60.0" prefWidth="857.0" VBox.vgrow="ALWAYS">
                <columnConstraints>
                    <ColumnConstraints hgrow="NEVER" maxWidth="262.0" minWidth="10.0" prefWidth="94.0"/>
                    <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" maxWidth="1.7976931348623157E308"
                                       minWidth="200.0" prefWidth="550.0"/>
                    <ColumnConstraints hgrow="NEVER" maxWidth="1.7976931348623157E308" prefWidth="120.0"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                </rowConstraints>
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </VBox.margin>
                <Label fx:id="outputDirLabel" text="Output Directory:"/>
                <TextField fx:id="outputPathField" editable="false" GridPane.columnIndex="1">
                    <GridPane.margin>
                        <Insets left="5.0" right="5.0"/>
                    </GridPane.margin>
                </TextField>
                <Button fx:id="browseBtn" maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                        onAction="#browseButtonPressed" text="Browse" GridPane.columnIndex="2"/>
                <Label fx:id="profileLabel" text="Profile:" GridPane.rowIndex="2"/>
                <ComboBox fx:id="profilesCombobox" maxWidth="1.7976931348623157E308" GridPane.columnIndex="1"
                          GridPane.rowIndex="2">
                    <GridPane.margin>
                        <Insets left="5.0" right="5.0"/>
                    </GridPane.margin>
                </ComboBox>
                <Button fx:id="editProfileBtn" maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                        text="Edit Profile" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
            </GridPane>
            <FileTable fx:id="fileTable" maxHeight="1.7976931348623157E308" minHeight="160.0" prefHeight="100.0"
                       prefWidth="865.0" tableMenuButtonVisible="true" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colID" editable="false" maxWidth="40.0" minWidth="40.0" prefWidth="40.0"
                                 resizable="false" style="-fx-alignment: CENTER" text="#"/>
                    <TableColumn fx:id="colFileName" editable="false" maxWidth="1.7976931348623157E308" minWidth="50.0"
                                 prefWidth="350.0" text="File Name"/>
                    <TableColumn fx:id="colTitle" editable="false" maxWidth="500.0" minWidth="50.0" prefWidth="170.0"
                                 text="Title"/>
                    <TableColumn fx:id="colDuration" editable="false" maxWidth="200.0" minWidth="50.0" prefWidth="100.0"
                                 style="-fx-alignment: CENTER" text="Duration"/>
                    <TableColumn fx:id="colState" editable="false" maxWidth="200.0" minWidth="50.0" prefWidth="100.0"
                                 style="-fx-alignment: CENTER" text="State"/>
                </columns>
                <VBox.margin>
                    <Insets left="10.0" right="10.0"/>
                </VBox.margin>

            </FileTable>
            <BorderPane.margin>
                <Insets left="15.0" right="15.0"/>
            </BorderPane.margin>
        </VBox>
    </center>
    <bottom>
        <GridPane maxHeight="60.0" BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="444.0" minWidth="10.0" prefWidth="146.0"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="784.0" minWidth="10.0" prefWidth="704.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints/>
            </rowConstraints>
            <Label text="Progress:"/>
            <ProgressBar fx:id="convertProgressBar" focusTraversable="false" maxWidth="1.7976931348623157E308"
                         prefWidth="200.0" progress="0.61" GridPane.columnIndex="1"/>
            <BorderPane.margin>
                <Insets bottom="20.0" left="25.0" right="25.0" top="10.0"/>
            </BorderPane.margin>
        </GridPane>
    </bottom>


</BorderPane>
