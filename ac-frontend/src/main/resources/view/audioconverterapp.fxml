<?xml version="1.0" encoding="UTF-8"?>

<?import com.ysrbdlgn.audioconverter.frontend.ui.FileTable?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="root"
            fx:controller="com.ysrbdlgn.audioconverter.frontend.ui.controller.MainAppController"
            minHeight="400.0" minWidth="600.0" prefHeight="800.0" prefWidth="900.0"
            stylesheets="@../css/mainapp.css" xmlns="http://javafx.com/javafx/8.0.112"
            xmlns:fx="http://javafx.com/fxml/1">

    <top>
        <VBox BorderPane.alignment="TOP_LEFT">
            <fx:include source="ribbon.fxml"/>
        </VBox>
    </top>
    <center>

    </center>
    <bottom>

    </bottom>
    <center>
        <VBox maxWidth="1.7976931348623157E308" BorderPane.alignment="CENTER">
            <GridPane fx:id="outputConfigPane" maxHeight="60.0" maxWidth="1.7976931348623157E308" minHeight="60.0"
                      prefHeight="60.0" prefWidth="857.0" VBox.vgrow="ALWAYS">
                <columnConstraints>
                    <ColumnConstraints hgrow="NEVER" maxWidth="262.0" minWidth="10.0" prefWidth="94.0"/>
                    <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" maxWidth="1.7976931348623157E308"
                                       minWidth="200.0" prefWidth="550.0"/>
                    <ColumnConstraints hgrow="NEVER" maxWidth="1.7976931348623157E308" prefWidth="120.0"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                </rowConstraints>
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="25.0" top="10.0"/>
                </VBox.margin>
                <Label fx:id="outputDirLabel" text="Output Directory:"/>
                <Label fx:id="profileLabel" text="Profile:" GridPane.rowIndex="2"/>
                <Button fx:id="browseBtn" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Browse"
                        GridPane.columnIndex="2"/>
                <Button fx:id="editProfileBtn" maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                        text="Edit Profile" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
                <TextField fx:id="outputPathField" GridPane.columnIndex="1">
                    <GridPane.margin>
                        <Insets left="5.0" right="5.0"/>
                    </GridPane.margin>
                </TextField>
                <ComboBox fx:id="profilesCombobox" maxWidth="1.7976931348623157E308" GridPane.columnIndex="1"
                          GridPane.rowIndex="2">
                    <GridPane.margin>
                        <Insets left="5.0" right="5.0"/>
                    </GridPane.margin>
                </ComboBox>
            </GridPane>
            <FileTable fx:id="fileTable" minHeight="160.0" prefHeight="160.0" prefWidth="865.0">
                <columns>
                    <TableColumn fx:id="colID" editable="false" maxWidth="40.0" minWidth="40.0" prefWidth="40.0"
                                 resizable="false" text="#" style="-fx-alignment: CENTER"/>
                    <TableColumn fx:id="colFileName" editable="false" maxWidth="1.7976931348623157E308" minWidth="50.0"
                                 prefWidth="300.0" text="File Name"/>
                    <TableColumn fx:id="colTitle" editable="false" maxWidth="500.0" minWidth="50.0" prefWidth="200.0"
                                 text="Title"/>
                    <TableColumn fx:id="colDuration" editable="false" maxWidth="200.0" minWidth="50.0" prefWidth="100.0"
                                 text="Duration" style="-fx-alignment: CENTER"/>
                    <TableColumn fx:id="colState" editable="false" maxWidth="200.0" minWidth="50.0" prefWidth="100.0"
                                 text="State" style="-fx-alignment: CENTER"/>
                </columns>
                <VBox.margin>
                    <Insets left="10.0" right="25.0"/>
                </VBox.margin>

            </FileTable>
            <BorderPane.margin>
                <Insets/>
            </BorderPane.margin>
        </VBox>
    </center>

</BorderPane>
